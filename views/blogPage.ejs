<!doctype html>
<html lang="en">
    <head>
        <%- include('./partials/head') %>
        <title>BlogPage</title>
    </head>
    <style>
        img {
            width: 400px;
            height: 450px;
        }
    </style>
    <body>
        <%- include('./partials/navbar') %>
        <div class="container mt-4">
            <img src="<%= blog.coverImageURL%>" alt="" width="100px" />
            <h1>Title: <%= blog.title%></h1>
            <p>Content: <%= blog.content %></p>
            <div>
                <img src="<%= blog.createdBy.profileImageUrl%>" width="50px" />
                <h3>Created By: <%= blog.createdBy.fullName%></h3>
            </div>
        </div>
        <% if (locals.user) { %>
            <div class="container mt-3">
                <h1>Comments(<%= comments.length %>)</h1>
                <form method="post" , action="/blogs/comment/<%= blog._id %>">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="content" placeholder="Enter your comment"/>
                    </div>
                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        <% } %>
        <div class="container mt-3">
            <% comments.forEach(comment=> { %>
                <div>
                    <img src="/images/avatar.png" style="width: 150px; height: 150px;"> Created By: <%= comment.createdBy.fullName%>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
        </div>
        <%- include('./partials/scripts') %>
    </body>
</html>
